@model TrainProject.Models.User
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_layout_3.cshtml";
}

<section class="section coming-soon" data-section="section3">

    @*<img src="~/Content/assets/images/main-slider-02.jpg" />*@
    <div class="caption" style="text-align: center">
        <h2 style="color:#fff">Registeration</h2>
        <form id="contact" action="" method="post" style="width:400px;margin:auto auto">
            <div class="row">
             
                <div class="col-md-12">
                    <fieldset>
                        @*<input name="name" type="text" class="form-control" id="name" placeholder="Your Name" required="">*@
                        <input type="text" asp-for="Name" class="form-control" id="name" placeholder="Your Name" required="" />
                        <span asp-validation-for="Name"></span>

                    </fieldset>
                </div>
                <div class="col-md-12">
                    <fieldset>
                        @*<input name="email" type="text" class="form-control" id="email" placeholder="Your Email" required="">*@
                        <input type="text" asp-for="Email" class="form-control" id="email" placeholder="Your Email" required="" />
                        <span asp-validation-for="Email"></span>

                    </fieldset>
                </div>




                <div class="col-md-12">
                    <fieldset>
                        @*<input name="password" type="text" class="form-control" id="password" placeholder="Your Password" required="">*@
                        <input type="password" asp-for="Password" class="form-control" id="password" placeholder="Your password" required="" />
                        <span asp-validation-for="Password"></span>

                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>
                        @*<input name="confirmpassword" type="text" class="form-control" id="confirmpassword" placeholder="Confirm Password" required="">*@
                        <input type="password" asp-for="ConfirmPassword" class="form-control" id="Confirmpassword" placeholder="Confirm Password" required="" />
                        <span asp-validation-for="ConfirmPassword"></span>

                    </fieldset>
                </div>

                <div class="col-md-12">
                    <fieldset>
                        <button class="button"type="submit" id="form-submit">Register</button>
                    </fieldset>
                </div>
            </div>
        </form>
    </div>
</section>
